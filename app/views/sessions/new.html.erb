<h1>Sign in</h1>

<%= form_with url: sign_in_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "cool-kid-94@me.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
    <p class="mt-1"><%= link_to "Forgot your password?", password_forgot_path %></p>
  </div>

  <div>
    <%= form.submit "Sign In!", class: "btn btn-primary" %>
  </div>
<% end %>

<p class="mt-3">No account yet? <%= link_to "Register", register_path %></p>
